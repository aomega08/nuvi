#!/usr/bin/env ruby

require 'optparse'

$LOAD_PATH.unshift(File.join(File.dirname(__FILE__), '..', 'lib'))
require 'nuvi'

options = {}
OptionParser.new do |opts|
  opts.banner = 'Usage: ./bin/nuvi [options]'

  opts.on('-r', '--redis HOST', 'Redis host') do |host|
    Nuvi.redis_host = host
  end

  opts.on('-p', '--port PORT', 'Redis port') do |port|
    Nuvi.redis_port = port.to_i
  end

  opts.on_tail('-h', '--help', 'Show this message') do
    puts opts
    exit
  end
end.parse!

Nuvi.start('http://feed.omgili.com/5Rh5AMTrc4Pv/mainstream/posts/')
